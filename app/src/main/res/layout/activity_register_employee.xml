<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="login.LoginActivity">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_person_add_black_24dp"
        />

    <TextView
        android:id="@+id/textUserInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="#ba0101"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:textStyle="bold"
        android:clickable="true"
        android:text="Give the user information"
        />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:ems="8"
        android:hint="Name"
        android:textColor="#00222d"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:gravity="center"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:ems="8"
        android:hint="Last name"
        android:textColor="#00222d"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:gravity="center"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:hint="Email"
        android:textColor="#00222d"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:background="#00000000"
        android:gravity="center"
        android:ems="8"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_password_24dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="#00222d"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:background="#00000000"
        android:gravity="center"
        android:hint="Password"
        android:ems="8"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="#00222d"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:background="#00000000"
        android:gravity="center"
        android:hint="Phone"
        android:ems="8"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textNip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="#ba0101"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:textStyle="bold"
        android:clickable="true"
        android:text="Give the NIP of the company \n where are you work"
        />

    <EditText
        android:id="@+id/editTextNIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_work_black_24dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="#00222d"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:background="#00000000"
        android:gravity="center"
        android:hint="NIP"
        android:ems="8"
        android:inputType="phone" />


    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textSize="30dp"
        android:textColor="#2A3c58"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="Register" />



</LinearLayout>